
@model IEnumerable<WebApplication3.Models.Reward>

@{
    ViewData["Title"] = "Управление наградами";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="AddReward">Создать новую</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Баллы</th>
            <th>Дети</th>  <!-- Новый столбец -->
        </tr>
    </thead>
    <tbody>
        @foreach (var reward in Model)
        {
            <tr>
                <td>@reward.Name</td>
                <td>@reward.Points</td>
                <td>
                    @if (reward.ChildRewards != null && reward.ChildRewards.Any())
                    {
                        @string.Join(", ", reward.ChildRewards.Select(cr => cr.Child.Name))
                    }
                    else
                    {
                        <text>Нет связанных детей</text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
