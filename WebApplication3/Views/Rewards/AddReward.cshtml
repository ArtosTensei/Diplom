@model WebApplication3.Models.Reward

@{
    ViewData["Title"] = "Add Reward";
}

<h1>@ViewData["Title"]</h1>

<h4>Reward</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        <form asp-action="AddReward">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label">Name</label>
                <input name="name" class="form-control" required />
            </div>
            <div class="form-group">
                <label class="control-label">Points</label>
                <input type="number" name="points" class="form-control" min="1" required />
            </div>
            <div class="form-group">
                <label class="control-label">Child</label>
                <select name="childId" class="form-control" asp-items="@(new SelectList(ViewBag.Children, "Id", "Name"))" required>
                    <option value="">Select Child</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageRewards">Back to List</a>
</div>