@model WebApplication3.Models.Reward

@{
    ViewData["Title"] = "Добавить награду";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        <form asp-action="AddReward">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label">Название</label>
                <input name="name" class="form-control" required style="max-width: 300px;" />
            </div>
            <div class="form-group">
                <label class="control-label">Очки</label>
                <input type="number" name="points" class="form-control" min="1" required style="max-width: 300px;" />
            </div>
            <div class="form-group">
                <label class="control-label">Ребенок</label>
                <select name="childId" class="form-control" asp-items="@(new SelectList(ViewBag.Children, "Id", "Name"))" required style="max-width: 300px;">
                    <option value="">Выберите ребенка</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageRewards" class="btn btn-secondary">Вернуться к списку</a>
</div>