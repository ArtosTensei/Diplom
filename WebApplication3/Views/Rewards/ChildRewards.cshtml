@model IEnumerable<WebApplication3.Models.Reward>

@{
    ViewData["Title"] = "My Rewards";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<h2>My Points: @ViewBag.ChildPoints</h2>

<h3>Available Rewards</h3>

<div class="row">
    @foreach (var reward in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@reward.Name</h5>
                    <p class="card-text">Cost: @reward.Points points</p>
                    <form asp-action="BuyReward" method="post">
                        <input type="hidden" name="rewardId" value="@reward.Id" />
                        <button type="submit" class="btn btn-primary" disabled="@(ViewBag.ChildPoints < reward.Points)">Buy</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>