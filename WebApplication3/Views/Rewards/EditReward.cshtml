@model WebApplication3.Models.Reward

@{
    ViewData["Title"] = "Измениь награду";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditReward" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label class="control-label">Название</label>
                <input name="name" class="form-control" value="@Model.Name" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Очки</label>
                <input name="points" class="form-control" value="@Model.Points" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ребенок</label>
                <select name="childId" class="form-control" asp-items="@(new SelectList(ViewBag.Children, "Id", "Name", Model.ChildId))">
                </select>
                <span asp-validation-for="ChildId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageRewards" class="btn btn-secondary">Вернуться к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}