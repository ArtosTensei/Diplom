<h2>Добавить новую задачу</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="Description">Описание</label>
        <textarea id="Description" name="Description" required></textarea>
    </div>
    <div>
        <label for="Points">Награда (баллы)</label>
        <input type="number" id="Points" name="Points" min="1" required>
    </div>
    <div>
        <label for="ChildId">Ребенок</label>
        <select id="ChildId" name="ChildId" required>
            @foreach (var child in ViewBag.Children)
            {
                <option value="@child.Id">@child.Name</option>
            }
        </select>
    </div>
    <button type="submit">Добавить</button>
</form>
<a href="/Tasks/Index">Вернуться к списку</a>
