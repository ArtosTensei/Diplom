@model WebApplication3.Models.Task

<h2>Редактировать задачу</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label for="Description">Описание</label>
        <textarea id="Description" asp-for="Description" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label for="Points">Награда (баллы)</label>
        <input type="number" id="Points" asp-for="Points" min="1" required>
        <span asp-validation-for="Points" class="text-danger"></span>
    </div>

    <div>
        <input type="checkbox" id="IsCompleted" asp-for="IsCompleted" />
        @Html.LabelFor(m => m.IsCompleted, new { @class = "control-label" })
    </div>

    <button type="submit">Сохранить изменения</button>
</form>

<a href="/Tasks/Index">Вернуться к списку</a>