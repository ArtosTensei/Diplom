﻿@{
	ViewData["Title"] = "Задачи";
}

 @model IEnumerable<WebApplication3.Models.Task>

<h1>@ViewData["Title"]</h1>

@if (ViewBag.UserRole != "Child")
{
	<p>
		<a asp-action="Create" class="btn btn-primary">Создать новую задачу</a>
	</p>
}

<table class="table">
	<thead>
		<tr>
			<th>
				Описание
			</th>
			<th>
				Очки
			</th>
			<th>
				Выполнено?
			</th>
			@if (ViewBag.UserRole == "Parent")
			{
				<th>
					Имя ребенка
				</th>
			}
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Points)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsCompleted)
				</td>
				<td>
					@if (ViewBag.UserRole == "Parent")
					{
						@Html.DisplayFor(modelItem => item.Child.Name)
					}
				</td>
				<td>
					@if (item.IsCompleted)
					{
						<a asp-action="MarkComplete" asp-route-id="@item.Id" class="btn btn-primary">Не выполнено</a>
					}
					else
					{
						<a asp-action="MarkComplete" asp-route-id="@item.Id" class="btn btn-primary">Выполнено</a>
					}
					@if (ViewBag.UserRole == "Parent")
					{
						<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Редактировать</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Удалить</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>